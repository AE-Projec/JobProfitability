@page "/support"
@model Job_Rentabilitätsrechner.Pages.SupportModel

@{
    ViewData["Title"] = "Support & FAQs | Job Rentabilitätsrechner";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section MetaTags {
    <meta name="description" content="Finden Sie Antworten auf häufig gestellte Fragen zum Job Rentabilitätsrechner und erfahren Sie, wie Sie unsere Arbeit durch Spenden unterstützen können." />
}
@section JsonLd {
    
    <script type="application/ld+json">
        {
          "@@context": "https://schema.org",
          "@@type": "FAQPage",
          "mainEntity": [
            {
              "@@type": "Question",
              "name": "Wie benutze ich den Rechner?",
              "acceptedAnswer": {
                "@@type": "Answer",
                "text": "Der Rechner ist einfach zu bedienen. Geben Sie die benötigten Daten in das jeweilige Feld ein und klicken Sie dann unten auf Berechnen."
              }
            },
            {
              "@@type": "Question",
              "name": "Welche Daten werden benötigt?",
              "acceptedAnswer": {
                "@@type": "Answer",
                "text": "Um das Nettogehalt zu berechnen, müssen Sie Ihr Bruttogehalt in das notwendige Feld eingeben."
              }
            },
            {
              "@@type": "Question",
              "name": "Welche Daten werden gespeichert?",
              "acceptedAnswer": {
                "@@type": "Answer",
                "text": "Es werden keinerlei Daten von Ihnen gespeichert. Sobald Sie die Seite verlassen, sind Ihre eingegebenen Daten gelöscht."
              }
            },
            {
              "@@type": "Question",
              "name": "Fallen Kosten für die Nutzung dieser Webseite an?",
              "acceptedAnswer": {
                "@@type": "Answer",
                "text": "Nein, es fallen für Sie keinerlei Kosten an, wenn Sie die Seite nutzen."
              }
            },
            {
              "@@type": "Question",
              "name": "Meine Fahrtstrecke kann automatisch berechnet werden, wo werden diese Daten gespeichert/verarbeitet?",
              "acceptedAnswer": {
                "@@type": "Answer",
                "text": "Für die Berechnung nutzen wir den Service von OpenRouteService. Ihre Daten werden nur für den Zeitraum der Berechnung verwendet und weder auf unseren Servern noch bei OpenRouteService dauerhaft gespeichert."
              }
            },
            {
              "@@type": "Question",
              "name": "Ich habe einen Fehler gefunden / etwas funktioniert nicht / ich habe eine Idee, an wen kann ich mich wenden?",
              "acceptedAnswer": {
                "@@type": "Answer",
                "text": "Vielen Dank, dass Sie uns dabei helfen, die Webseite zu verbessern! Sie können einen Bugreport an jobrentabilitaet@gmail.com senden."
              }
            }
          ]
        }
        </script>
    
}


<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
